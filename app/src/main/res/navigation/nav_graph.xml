<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/workout_pager">

    <fragment
        android:id="@+id/workout_pager"
        android:name="com.emre.android.workoutroutine.view.fragments.CollectionWorkoutFragment"
        tools:layout="@layout/fragment_workout">
        <action
            android:id="@+id/action_workout_pager_to_fragment_add_exercise"
            app:destination="@id/fragment_add_exercise"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/body_fragment"
        android:name="com.emre.android.workoutroutine.view.fragments.BodyFragment"
        tools:layout="@layout/fragment_body" />
    <fragment
        android:id="@+id/history_fragment"
        android:name="com.emre.android.workoutroutine.view.fragments.HistoryFragment"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/fragment_add_exercise"
        android:name="com.emre.android.workoutroutine.view.fragments.AddExerciseFragment"
        tools:layout="@layout/fragment_add_exercise" />
</navigation>